$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 450, Height: 620);

    #Title {
      Group {
        Anchor: (Height: 50);

        Label #TitleLabel {
          Style: (
            FontSize: 24,
            LetterSpacing: 2,
            RenderUppercase: true,
            RenderBold: true,
            TextColor: #ccb588,
            HorizontalAlignment: Center,
            VerticalAlignment: Center
          );
          Text: "HySuite Dashboard";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Top: 10, Left: 15, Right: 15, Bottom: 15);

      // Stats Section
      Group #StatsSection {
        LayoutMode: Top;
        Anchor: (Height: 280, Top: 10);

        // Homes Stat
        Group #HomesStat {
          LayoutMode: Left;
          Anchor: (Height: 60, Top: 5);
          Background: (Color: #2b3542);

          Label #HomesIcon {
            Anchor: (Width: 60);
            Style: (
              FontSize: 28,
              HorizontalAlignment: Center,
              VerticalAlignment: Center,
              TextColor: #667EEA
            );
            Text: "H";
          }

          Group #HomesInfo {
            LayoutMode: Top;

            Label #HomesLabel {
              Style: (
                FontSize: 12,
                TextColor: #888888
              );
              Text: "Homes";
            }

            Label #HomesCount {
              Style: (
                FontSize: 18,
                RenderBold: true,
                TextColor: #FFFFFF
              );
              Padding: (Top: 3);
              Text: "0/0";
            }
          }
        }

        // Warps Stat
        Group #WarpsStat {
          LayoutMode: Left;
          Anchor: (Height: 60, Top: 5);
          Background: (Color: #2b3542);

          Label #WarpsIcon {
            Anchor: (Width: 60);
            Style: (
              FontSize: 28,
              HorizontalAlignment: Center,
              VerticalAlignment: Center,
              TextColor: #F093FB
            );
            Text: "W";
          }

          Group #WarpsInfo {
            LayoutMode: Top;

            Label #WarpsLabel {
              Style: (
                FontSize: 12,
                TextColor: #888888
              );
              Text: "Warps";
            }

            Label #WarpsCount {
              Style: (
                FontSize: 18,
                RenderBold: true,
                TextColor: #FFFFFF
              );
              Padding: (Top: 3);
              Text: "0 available";
            }
          }
        }

        // Rank Stat
        Group #RankStat {
          LayoutMode: Left;
          Anchor: (Height: 60, Top: 5);
          Background: (Color: #2b3542);

          Label #RankIcon {
            Anchor: (Width: 60);
            Style: (
              FontSize: 28,
              HorizontalAlignment: Center,
              VerticalAlignment: Center,
              TextColor: #4ADE80
            );
            Text: "R";
          }

          Group #RankInfo {
            LayoutMode: Top;

            Label #RankLabel {
              Style: (
                FontSize: 12,
                TextColor: #888888
              );
              Text: "Rank";
            }

            Label #RankName {
              Style: (
                FontSize: 18,
                RenderBold: true,
                TextColor: #FFFFFF
              );
              Padding: (Top: 3);
              Text: "Default";
            }
          }
        }

        // Playtime Stat
        Group #PlaytimeStat {
          LayoutMode: Left;
          Anchor: (Height: 60, Top: 5);
          Background: (Color: #2b3542);

          Label #PlaytimeIcon {
            Anchor: (Width: 60);
            Style: (
              FontSize: 28,
              HorizontalAlignment: Center,
              VerticalAlignment: Center,
              TextColor: #FBBF24
            );
            Text: "P";
          }

          Group #PlaytimeInfo {
            LayoutMode: Top;

            Label #PlaytimeLabel {
              Style: (
                FontSize: 12,
                TextColor: #888888
              );
              Text: "Playtime";
            }

            Label #PlaytimeValue {
              Style: (
                FontSize: 18,
                RenderBold: true,
                TextColor: #FFFFFF
              );
              Padding: (Top: 3);
              Text: "0m";
            }
          }
        }
      }

      Group #Separator {
        Anchor: (Height: 1, Top: 15);
        Background: (Color: #2b3542);
      }

      // Quick Actions Title
      Group #ActionsHeader {
        Anchor: (Height: 30, Top: 15);

        Label #ActionsTitle {
          Style: (
            FontSize: 16,
            RenderBold: true,
            TextColor: #FFFFFF,
            VerticalAlignment: Center
          );
          Text: "Quick Actions";
        }
      }

      // Action Buttons
      Group #ActionButtons {
        LayoutMode: Top;
        Anchor: (Height: 120, Top: 10);

        Group #ButtonRow1 {
          LayoutMode: Left;
          Anchor: (Height: 50, Top: 5);

          $C.@TextButton #ManageHomesButton {
            FlexWeight: 1;
            Anchor: (Height: 50, Right: 5);
            Text: "Manage Homes";
          }

          $C.@TextButton #ViewWarpsButton {
            FlexWeight: 1;
            Anchor: (Height: 50, Left: 5);
            Text: "View Warps";
          }
        }

        Group #ButtonRow2 {
          LayoutMode: Left;
          Anchor: (Height: 50, Top: 5);

          $C.@TextButton #PlayerStatsButton {
            FlexWeight: 1;
            Anchor: (Height: 50, Right: 5);
            Text: "Player Stats";
          }

          $C.@TextButton #SettingsButton {
            FlexWeight: 1;
            Anchor: (Height: 50, Left: 5);
            Text: "Settings";
          }
        }
      }

      Group #Separator2 {
        Anchor: (Height: 1, Top: 15);
        Background: (Color: #2b3542);
      }

      Group {
        LayoutMode: Left;
        Anchor: (Height: 44, Top: 15);

        Group { FlexWeight: 1; }

        $C.@TextButton #CloseButton {
          Text: "Close";
          Anchor: (Width: 120, Height: 44);
        }
      }
    }
  }
}

$C.@BackButton {}

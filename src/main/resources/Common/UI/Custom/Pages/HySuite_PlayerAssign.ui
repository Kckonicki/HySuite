$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 600, Height: 500);

    #Title {
      Group {
        Anchor: (Height: 50);

        Label #TitleLabel {
          Style: (
            FontSize: 24,
            LetterSpacing: 2,
            RenderUppercase: true,
            RenderBold: true,
            TextColor: #ccb588,
            HorizontalAlignment: Center,
            VerticalAlignment: Center
          );
          Text: "Assign Ranks";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Top: 10, Left: 15, Right: 15, Bottom: 15);

      Group {
        LayoutMode: Left;
        Anchor: (Height: 32, Bottom: 15);

        $C.@HeaderSearch {}
      }

      Group #Separator {
        Anchor: (Height: 1, Bottom: 15);
        Background: (Color: #2b3542);
      }

      Group #PlayerListContainer {
        FlexWeight: 1;
        LayoutMode: TopScrolling;
        ScrollbarStyle: $C.@DefaultScrollbarStyle;

        Group #PlayerList {
          LayoutMode: Top;
        }
      }
    }
  }
}

$C.@BackButton {}
